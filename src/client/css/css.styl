* {
  margin:0;
  padding: 0;
  font-family: Helvetica, Arial, Sans-Serif;
  font-size: 18px;
}

body {
  background-color: gray;
}

.introText {
  text-align: center;
  margin: 25px auto;
  text-transform: uppercase;
}

.validatedText {
  text-align: center;
  background-color: #eee;
}

.wrapper {
  width: 55%;
  margin-top: 50px;
  margin-left: auto;
  margin-right: auto;
  border: 1px solid #eee;
  background-color: lightgrey;
}

.display {
  background-color: white;
  min-height: 400px;
  border:1px solid darkgray;
  margin: 5px;
}

.myBtn {
  border:1px solid #ccc;
  background-color: gray;
  border-radius: 10px;
  cursor: pointer;
  text-align: center;
  margin: 0 auto;
  width: 10%;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  float:  left;
  color: #fff;
}

.entry {
  width: 80%;
  height: 40px;
  float: left;
  display: inline-block;
  text-align: center;
}

.entryWrapper {
  margin: 5px;
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.custom {
  position:absolute;
  right: 20%;
  cursor: pointer;
}

.exit {
  cursor:pointer;
}

.holder {
  width: 30%;
  text-align: center;
  height: 35px;
  margin: 5px auto 5px auto;
  display: block; 
  border-radius: 2px;
}

.clearFloat{
  float: initial;
}

.inputs {   
  width:100%;
  margin: 20px auto;
}

.row {
  display: flex;
  justify-content: space-between;
  margin:0;
}

.dateAndTimeInfo {
  background-color: lightgray;
}

.whoIsIt {
  background-color: #eeeeee;
}

.whoIsTyping {
  text-align: center;
  left: 45%;
  opacity: 0.5;
}

/* List Of Users */

.listOfUsersWrapper {
  position: absolute;
  top: 10%;
  right: 1%;
  width: 20%;

  .listOfUsers {
    border: 1px solid #eee;
    background-color: lightgrey;
  }

  .header {
    text-transform: uppercase;
    margin: 5px;
    text-align: center;
    font-weight:bold;
    font-size: 20px;
  }
}
.userRow {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid darkgrey;
  overflow-x: auto;
}

.bsTable {
  background-color: #808080;
  color: #ddd;
}

.spinner {
  text-align: center;
}